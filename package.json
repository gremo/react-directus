{
  "name": "react-directus",
  "version": "0.0.2",
  "description": "A set of React components and utilities for Directus Headless CMS",
  "files": [
    "dist"
  ],
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/types",
  "scripts": {
    "lint": "eslint src/* --ext .ts,.tsx",
    "test": "jest",
    "prepublishOnly": "npm run build",
    "build": "rimraf dist/* && rollup -c --bundleConfigAsCjs && tsc-alias",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json}\"",
    "api-extract": "api-extractor run",
    "api-documenter": "api-documenter markdown -i temp -o docs",
    "docs": "npm run api-extract && npm run api-documenter",
    "clean": "rimraf dist/* && rimraf docs/* && rimraf temp/*",
    "pre-pull-request": " npm run clean && npm run format && npm run lint && npm run test && npm run build"
  },
  "pre-commit": [
    "format",
    "lint"
  ],
  "keywords": [
    "react",
    "react-hooks",
    "directus",
    "headless",
    "cms"
  ],
  "author": "Marco Polichetti <gremo1982@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@directus/sdk": "10.3.5",
    "@microsoft/api-documenter": "7.22.30",
    "@microsoft/api-extractor": "7.36.3",
    "@rollup/plugin-commonjs": "25.0.3",
    "@rollup/plugin-node-resolve": "15.1.0",
    "@testing-library/react": "14.0.0",
    "@types/jest": "29.5.3",
    "@types/react": "18.2.18",
    "@types/react-dom": "18.2.7",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "eslint": "8.46.0",
    "eslint-config-prettier": "8.10.0",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-tsdoc": "0.2.17",
    "jest": "29.6.2",
    "jest-environment-jsdom": "29.6.2",
    "pre-commit": "1.2.2",
    "prettier": "3.0.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rimraf": "5.0.1",
    "rollup": "3.27.2",
    "rollup-plugin-typescript2": "0.35.0",
    "ts-jest": "29.1.1",
    "tsc-alias": "1.8.7",
    "typescript": "5.1.6"
  },
  "peerDependencies": {
    "@directus/sdk": "^9.0.0 || ^10.0.0",
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0"
  }
}
